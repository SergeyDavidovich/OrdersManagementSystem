<UserControl
    x:Class="Dashboard.ProductStatistics.ProductStatsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure"
    xmlns:local="clr-namespace:Dashboard.ProductStatistics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Infrastructure.UserControls;assembly=Infrastructure"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <userControls:HeaderedContentControl Title="{Binding Title, Mode=OneWay}" AccentColor="#FF068DFD">
        <userControls:HeaderedContentControl.CommandBar>
            <Button
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{x:Static inf:GlobalCommands.NavigateToManageEntityViewCompositeCommand}"
                CommandParameter="Products"
                Content="Manage"
                DockPanel.Dock="Right"
                Style="{StaticResource ManageButtonStyle}" />
        </userControls:HeaderedContentControl.CommandBar>
    </userControls:HeaderedContentControl>
    <!--<Grid Background="SteelBlue" >
        <Button Style="{StaticResource ManageButtonStyle}" Command="{x:Static inf:GlobalCommands.NavigateToManageEntityViewCompositeCommand}" CommandParameter="Products"></Button>
    </Grid>-->
</UserControl>
