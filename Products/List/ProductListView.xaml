        <userControls:HeaderedContentControl.ChildContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <syncfusion:SfDataGrid ItemsSource="{Binding ElementName=sfDataPager,Path=PagedSource}" 
                                   ShowBusyIndicator="True" 
                                   ShowGroupDropArea="True"/>
                <datapager:SfDataPager x:Name="sfDataPager" Source="{Binding Products}" Grid.Row="1" />
            </Grid>
        </userControls:HeaderedContentControl.ChildContent>
    </userControls:HeaderedContentControl>-->
</UserControl>
