<UserControl x:Class="Orders.Views.OrderManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Orders.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:userControls="clr-namespace:Infrastructure.UserControls;assembly=Infrastructure"
             xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <userControls:HeaderedContentControl AccentColor="#FF068DFD" Title="{Binding Title, Mode=OneWay}" >
            <userControls:HeaderedContentControl.ChildContent>
                <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.OrdersContentRegion}"/>
            </userControls:HeaderedContentControl.ChildContent>
        </userControls:HeaderedContentControl>
        
    </Grid>
</UserControl>
