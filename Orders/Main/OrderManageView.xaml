<UserControl
    x:Class="Orders.Views.OrderManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure"
    xmlns:local="clr-namespace:Orders.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:userControls="clr-namespace:Infrastructure.UserControls;assembly=Infrastructure"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <userControls:HeaderedContentControl Title="{Binding Title, Mode=OneWay}" AccentColor="#FF068DFD">
            <userControls:HeaderedContentControl.ChildContent>
                <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.OrdersContentRegion}" />
            </userControls:HeaderedContentControl.ChildContent>
            <userControls:HeaderedContentControl.CommandBar>
                <Button
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding SwitchOrdersContentStateCommand}"
                    Content="{Binding OrdersContentRegionSwitchViewButtonText}"
                    DockPanel.Dock="Right"
                    Style="{StaticResource ManageButtonStyle}" />
            </userControls:HeaderedContentControl.CommandBar>
        </userControls:HeaderedContentControl>
        <userControls:HeaderedContentControl
            Title="{Binding Title, Mode=OneWay}"
            Grid.Column="1"
            Margin="10,0,0,0"
            AccentColor="#FF068DFD">
            <userControls:HeaderedContentControl.ChildContent>
                <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.OrderDetailsRegion}" />
            </userControls:HeaderedContentControl.ChildContent>
        </userControls:HeaderedContentControl>
    </Grid>
</UserControl>
