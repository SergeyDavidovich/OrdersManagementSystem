                                Command="{Binding Path=DataContext.CancelCommand, ElementName=invoiceView}"/>
                    </StackPanel>-->
                </DockPanel>
            </DataTemplate>
        </GroupBox.HeaderTemplate>
        <Border Margin="6" CornerRadius="2" 
                BorderBrush="{DynamicResource PrimaryHueLightBrush}" 
                BorderThickness="1" Background="White">
            <syncfusion:ReportViewer x:Name="Viewer" 
                    ProcessingMode="Local" 
                    ReportPath="..\..\..\Orders\Reports\OrderReport.rdlc"
                    Margin="6">

            </syncfusion:ReportViewer>
        </Border>

