<UserControl x:Class="Customers.Add.CustomerAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Customers.Add"
             xmlns:userControls="clr-namespace:Infrastructure.UserControls;assembly=Infrastructure"
             xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <userControls:HeaderedContentControl AccentColor="Transparent" Title="{Binding Title, Mode=OneWay}" >
            <userControls:HeaderedContentControl.CommandBar>
                <Button
                    Margin="0,0,31,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Save"
                    DockPanel.Dock="Right"
                    Style="{StaticResource ManageButtonStyle}" />
            </userControls:HeaderedContentControl.CommandBar>
    </userControls:HeaderedContentControl>
</UserControl>
